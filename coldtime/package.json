{
  "name": "coldtime",
  "version": "2.0.0",
  "description": "A desktop app for persisting values (i.e. temperature) over time got from multiple devices. Created for POL-EKO to manage their SMART PRO fridge data.",
  "main": "./out/main/index.js",
  "author": "arciiix.com",
  "homepage": "https://www.electronjs.org",
  "build": {
    "compression": "maximum",
    "extraResources": [
      "prisma/**/*",
      "node_modules/.prisma/**/*",
      "node_modules/@prisma/client/**/*"
    ],
    "win": {
      "icon": "resources/icon.png"
    }
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "dev:w": "electron-vite dev --watch",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "build:linux": "electron-vite build && electron-builder --linux --config"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.5.3",
    "@electron-toolkit/preload": "^1.0.3",
    "@electron-toolkit/utils": "^1.0.2",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@prisma/client": "^4.11.0",
    "@tensorflow/tfjs": "^4.4.0",
    "apexcharts": "^3.37.3",
    "axios": "^1.3.4",
    "framer-motion": "^10.9.1",
    "i18next": "^22.4.14",
    "local-devices": "^4.0.0",
    "react-apexcharts": "^1.4.0",
    "react-hook-form": "^7.43.8",
    "react-i18next": "^12.2.0",
    "react-icons": "^4.8.0",
    "react-multi-date-picker": "^3.3.4",
    "react-router-dom": "^6.9.0",
    "react-spinners": "^0.13.8",
    "recoil": "^0.7.7",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.3",
    "@types/node": "16.18.14",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.14",
    "electron": "^22.3.2",
    "electron-builder": "^23.6.0",
    "electron-vite": "^1.0.20",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "prisma": "^4.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.4"
  }
}
